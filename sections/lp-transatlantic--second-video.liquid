{% assign title      = section.settings.title %}
{% assign video      = section.settings.video %}
{% assign video_mob  = section.settings.video_mob %}
{% assign image      = section.settings.image %}
{% assign image_mob  = section.settings.image_mob %}
{% assign aspect_mob = section.settings.aspect_mob %}
{% assign aspect     = section.settings.aspect %}
{% assign bg_color   = section.settings.bg_color %}
{% assign full_width = section.settings.full_width %}

<style>
    #lp-second-video .lp--section-video__inner {
        padding-bottom: {{ aspect_mob }}%;
    }

    @media (min-width: 767px) {
        #lp-second-video .lp--section-video__inner {
            padding-bottom: {{ aspect }}%;
        }
    }

    .lp--section-video__inner .lp--section-video__text {
        font-size: 24px;
        line-height: 34px;
        letter-spacing: 0.15em;
    }

    #lp-second-video .lp--section-video__text {
        top: 51%;
    }

    @media (min-width: 992px) {
        #lp-second-video .lp--section-video__text {
            top: 47%;
            left: 51.6%;
        }
    }
</style>

<section id="lp-second-video">
    {% render 'lp--section-video' title: title, video: video, video_mob: video_mob,  image: image, image_mob: image_mob, bg_color: bg_color, full_width: full_width  %}
</section>

{% schema %}
{
    "name": "Second video",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image for desktop"
        },
        {
            "type": "image_picker",
            "id": "image_mob",
            "label": "Image for mobile"
        },
        {
            "type": "text",
            "id": "video",
            "label": "Video for desktop",
            "info": "Enter video name without extension. Please ensure all .mp4, .ogv, .webm are uploaded to Files."
        },
        {
            "type": "text",
            "id": "video_mob",
            "label": "Video for mobile",
            "info": "Enter video name without extension. Please ensure all .mp4, .ogv, .webm are uploaded to Files."
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color",
            "default": "#181818"
        },
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Full width?",
            "default": true
        },
        {
            "type": "number",
            "id": "aspect_mob",
            "label": "Height section for mobile",
            "default": 145,
            "info": "50 - ratio 16:9 | 100 - ratio 1:1"
        },
        {
            "type": "number",
            "id": "aspect",
            "label": "Height section for desktop",
            "default": 47,
            "info": "50 - ratio 16:9 | 100 - ratio 1:1"
        }
    ]
}
{% endschema %}
