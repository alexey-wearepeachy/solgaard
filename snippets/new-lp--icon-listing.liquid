<style>
    #new-lp--icon-listing {
        background-color: {{ section.settings.bg_color }};
    }

    #new-lp--icon-listing .icon-listing__container .icon-listing__title {
        color: {{ section.settings.title_color }};
    }

    {% for block in section.blocks %}
        #new-lp--icon-listing .icon-listing__container .icon-listing__items .icon-listing__item .icon-listing__item-title {
            color: {{ block.settings.block_title_color }};
        }

        #new-lp--icon-listing .icon-listing__container .icon-listing__items .icon-listing__item .icon-listing__item-text {
            color: {{ block.settings.block_text_color }};
        }
    {% endfor %}
</style>

<div id="new-lp--icon-listing">
    <div class="icon-listing__container">
        {% if section.settings.title != blank %}
            <h3 class="icon-listing__title">{{ section.settings.title }}</h3>
        {% endif %}

        <div class="icon-listing__items">
            {% for block in section.blocks %}
                <div class="icon-listing__item">
                    <div class="icon-listing__item-icon">
                        {{ block.settings.block_icon }}
                    </div>
                    <h4 class="icon-listing__item-title">
                        {{ block.settings.block_title }}
                    </h4>
                    <div class="icon-listing__item-text">
                        {{ block.settings.block_text }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>