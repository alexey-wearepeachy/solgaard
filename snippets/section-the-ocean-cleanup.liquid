{%- liquid
  assign title = block.settings.title
  assign content = block.settings.content
-%}

<section class="section-banner section-banner-the-ocean-cleanup">
  {%- assign image = block.settings.image -%}
  {%- if image -%}
    {%- assign img_small = image | img_url: '18x' -%}
    {%- assign img_api = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
  {%- else -%}
    {%- assign image = 'blank.svg' | asset_url -%}
    {%- assign img_small =  'blank.svg' | asset_url -%}
    {%- assign img_api = 'blank.svg' | asset_url -%}
  {%- endif -%}
  {%- assign parallax = block.settings.parallax -%}
  {%- assign logo = block.settings.logo -%}
  <div
   class="section-bg lazyload"
   id="FeaturedImage-the-ocean-cleanup"
   {% if parallax %}
     data-section-type="parallax"
     data-section-id="the-ocean-cleanup"
     data-parallax-src="{{ img_small }}"
     data-src="{{ img_api }}"
     data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048, 2450, 2700, 3000, 3350, 3750, 4100, 4480]"
     data-aspectratio="{{ image.aspect_ratio }}"
     data-sizes="auto"
     style="background-image: url('{{ image | img_url: '1x1' }}');"
     {% else %}
      data-alt="{{ image.alt | default: shop.name }}"
      data-bgset="{% include 'bgset', image: image %}"
     {% endif %}>
    </div>

  <div class="section-body section-inverse text-center">
    <div class="wrapper">
      <div class="grid">
        <div class="grid__item grid__item large--eight-twelfths push--large--two-twelfths">
          {%- include 'lazy-image' with image: logo -%}
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section-body section-inverse text-center">
  {%- assign title = block.settings.title -%}
  {%- assign content = block.settings.content -%}
  {%- assign youtube_video_link = block.settings.youtube_video_link -%}
  <div class="wrapper">
    <div class="grid">
      <div class="grid__item large--one-half push--large--one-quarter">

        {%- unless title == blank -%}
          <h2 class="section-title">{{ title }}</h2>
        {%- endunless -%}

        {%- unless title == blank -%}
          <div class="rte">{{ content }}</div>
        {%- endunless -%}

        <div class="page-margin">
          <h3 class="section-subtitle">Plastic Pulled in 2020</h3>

          <p class="plastic-pulled__title h1">90,000 lbs</p>
          {%- include 'plastic-pulled' -%}
        </div>
      </div>
    </div>

    {%- unless youtube_video_link == blank -%}
      {%- assign youtube_id = youtube_video_link | remove: 'https://youtu.be/' -%}
      <div class="page-margin">
        <div class="grid">
          <div class="grid__item large--ten-twelfths push--large--one-twelfth">
            <div
             class="video-wrapper youtube-wrapper lazy-video"
             data-youtube-id="{{ youtube_id }}"
             lazy-video-trigger>
              <div
               class="video-wrapper__bg"
               style="background-image:url(&quot;{{ 'bg-see-our-effors-in-action.jpg'| asset_img_url: '1200x' }}&quot;)">
              </div>
              <div class="video-wrapper__content">
                <div class="svg-wrapper">
                  {%- include 'icon-solgaard-play' -%}
                </div>

                <h2>See our efforts in action</h2>
              </div>
            </div>
          </div>
        </div>
      </div>
    {%- endunless -%}

    <div class="page-margin">
      <div class="grid">
        <div class="grid__item large--eight-twelfths push--large--two-twelfths">
          <h2 class="section-title">How we're also helping</h2>

          <div class="grid">
            <div class="grid__item one-half">
              <div class="icon-wrapper" style="width:100px">
                {%- include 'icon-remove-plastic' -%}
              </div>

              <p>We are removing all single use plastics from our products.</p>
            </div>

            <div class="grid__item one-half">
              <div class="icon-wrapper" style="width:100px">
                {%- include 'icon-upcycle-ocean' -%}
              </div>

              <p>We upcycle ocean waste into great products.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
